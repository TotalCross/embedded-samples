<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout2"
        android:layout_width="960dp"
        android:layout_height="640dp"
        android:background="#003F52">

    <TextView
            android:id="@+id/titleLabel"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="28dp"
            android:textSize="50dp"
            android:text="OXYGEN"
            android:textColor="#FFFFFF"
    />
    <TextView
            android:id="@+id/oxygenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="103dp"
            android:textSize="140dp"
            android:text="84"
            android:textColor="#00A8DB"
    />
    <TextView
            android:id="@+id/percentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="141dp"
            android:textSize="50dp"
            android:text="%"
            android:textColor="#00A8DB"
    />
    <TextView
            android:id="@+id/oxygenMinMaxLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="289dp"
            android:textSize="24dp"
            android:text="85 / 99"
            android:textColor="#00A8DB"
    />

    <TextView
            android:id="@+id/oxygenMinMaxLabel3"
            android:layout_width="45dp"
            android:layout_height="1dp"
            android:text=""
            android:background="#00A8DB"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="285dp" />

    <ImageView
            android:id="@+id/lungsImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:layout_editor_absoluteX="298dp"
            tools:layout_editor_absoluteY="178dp"
            android:background="@drawable/lungsSmaller" />

    <TextView
            android:id="@+id/lungsLabel"
            android:layout_width="75dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="SpO2"
            android:textColor="#00A8DB"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/lungsImage"
            tools:layout_editor_absoluteY="270dp" />

    <TextView
            android:id="@+id/flowLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="505dp"
            tools:layout_editor_absoluteY="36dp"
            android:textSize="25dp"
            android:text="FLOW ML/SEC"
            android:textColor="#FFFFFF"
    />
    <TextView
            android:id="@+id/minSpO2Label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="515dp"
            tools:layout_editor_absoluteY="345dp"
            android:textSize="25dp"
            android:text="MIN % SpO2"
            android:textColor="#FFFFFF"
    />

    <TextView
            android:id="@+id/controlsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="735dp"
            tools:layout_editor_absoluteY="36dp"
            android:textSize="25dp"
            android:text="CONTROLS"
            android:textColor="#FFFFFF"
    />
    <TextView
            android:id="@+id/notifyLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="754dp"
            tools:layout_editor_absoluteY="84dp"
            android:textSize="17dp"
            android:text="NOTIFY"
            android:textColor="#00A8DB"
    />
    <TextView
            android:id="@+id/setAlarmLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="754dp"
            tools:layout_editor_absoluteY="408dp"
            android:textSize="17dp"
            android:text="SET ALARM"
            android:textColor="#00A8DB"
    />

    <Button
            android:id="@+id/saveButton"
            android:layout_width="118dp"
            android:layout_height="65dp"
            android:text="SAVE"
            tools:layout_editor_absoluteX="755dp"
            tools:layout_editor_absoluteY="440dp" />
    <Button
            android:id="@+id/cancelButton"
            android:layout_width="118dp"
            android:layout_height="65dp"
            android:text="CANCEL"
            tools:layout_editor_absoluteX="755dp"
            tools:layout_editor_absoluteY="523dp" />

    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="640dp"
            android:background="@drawable/arrowOxygenScreen"
            tools:layout_editor_absoluteX="920dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
