<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="960dp"
        android:layout_height="640dp">
    <ImageView
            android:id="@+id/scan"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_width="960dp"
            android:layout_height="640dp"
            android:background="@drawable/scan"
    />
    <Button
            android:id="@+id/sendphone"
            android:layout_width="244dp"
            android:layout_height="264dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="317dp"
            android:background="@drawable/PHONE" />

    <Button
            android:id="@+id/sendusb"
            android:layout_width="244dp"
            android:layout_height="264dp"
            android:background="@drawable/usbp"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_editor_absoluteY="317dp" />


    <TextView
            android:id="@+id/TextView"
            android:layout_width="400dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="What do you want to do with your scan?"
            android:textColor="#000000"
            android:textSize="34dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="285dp"
            tools:layout_editor_absoluteY="167dp" />

    <TextView
            android:id="@+id/TextView3"
            android:layout_width="373dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="SEND / SAVE"
            android:textColor="#BC26FF"
            android:textSize="50dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="46dp" />
    <Button
            android:id="@+id/home"
            android:layout_width="44dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="852dp"
            tools:layout_editor_absoluteY="54dp"
            android:background="@drawable/home" />

    <Button
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:background="@drawable/home_seta"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="55dp" />

    <Button
            android:id="@+id/sendpc"
            android:layout_width="244dp"
            android:layout_height="260dp"
            android:background="@drawable/savepc"
            tools:layout_editor_absoluteX="655dp"
            tools:layout_editor_absoluteY="320dp" />


</androidx.constraintlayout.widget.ConstraintLayout>