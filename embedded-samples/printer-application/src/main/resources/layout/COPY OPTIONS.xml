<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="960dp"
    android:layout_height="640dp">
 <ImageView
     android:id="@+id/scan"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp"
     android:layout_width="960dp"
     android:layout_height="640dp"
     android:background="@drawable/scan"
     />

 <Button
     android:id="@+id/bcopy"
     android:layout_width="340dp"
     android:layout_height="264dp"
     tools:layout_editor_absoluteX="560dp"
     tools:layout_editor_absoluteY="317dp"
     android:background="@drawable/copyb" />
 <ImageView
     android:id="@+id/ImageView"
     android:layout_width="244dp"
     android:layout_height="264dp"
     tools:layout_editor_absoluteX="57dp"
     tools:layout_editor_absoluteY="318dp"
     android:background="@drawable/numberbackground" />


 <TextView
     android:id="@+id/number"
     android:layout_width="83dp"
     android:layout_height="129dp"
     android:gravity="center"
     android:text="4"
     android:textColor="#00ACF8"
     android:textSize="90dp"
     android:textStyle="bold"
     tools:layout_editor_absoluteX="140dp"
     tools:layout_editor_absoluteY="385dp" />

 <TextView
     android:id="@+id/TextView3"
     android:layout_width="331dp"
     android:layout_height="106dp"
     android:gravity="center"
     android:text="How many copies do you need?"
     android:textColor="#000000"
     android:textSize="36dp"
     android:textStyle="bold"
     tools:layout_editor_absoluteX="317dp"
     tools:layout_editor_absoluteY="164dp" />

 <TextView
     android:id="@+id/TextView4"
     android:layout_width="390dp"
     android:layout_height="60dp"
     android:gravity="center"
     android:text="COPY OPTIONS"
     android:textColor="#00ACF8"
     android:textSize="48dp"
     android:textStyle="bold"
     tools:layout_editor_absoluteX="270dp"

     tools:layout_editor_absoluteY="44dp" />

 <Button
     android:id="@+id/home"
     android:layout_width="51dp"
     android:layout_height="54dp"
     tools:layout_editor_absoluteX="851dp"
     tools:layout_editor_absoluteY="51dp"
     android:background="@drawable/home" />
 <Button
     android:id="@+id/back"
     android:layout_width="36dp"
     android:layout_height="46dp"
     android:background="@drawable/home_seta"
     tools:layout_editor_absoluteX="85dp"
     tools:layout_editor_absoluteY="55dp" />

 <Button
     android:id="@+id/plus"
     android:layout_width="46dp"
     android:layout_height="36dp"
     android:background="@drawable/add"
     tools:layout_editor_absoluteX="320dp"
     tools:layout_editor_absoluteY="368dp" />

 <Button
     android:id="@+id/minus"
     android:layout_width="46dp"
     android:layout_height="36dp"
     android:background="@drawable/minus"
     tools:layout_editor_absoluteX="320dp"
     tools:layout_editor_absoluteY="491dp" />


</androidx.constraintlayout.widget.ConstraintLayout>