<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="960dp"
        android:layout_height="640dp">
    <ImageView
            android:id="@+id/scan"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_width="960dp"
            android:layout_height="640dp"
            android:background="@drawable/scan"
    />
    <Button
            android:id="@+id/scanb"
            android:layout_width="388dp"
            android:layout_height="174dp"
            android:background="@drawable/BUTTON_SCAN"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="402dp" />

    <TextView
            android:id="@+id/TextView"
            android:layout_width="510dp"
            android:layout_height="135dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="36dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="186dp"
            android:text="Please lift the lid and place the photo on the tray. Hit NEXT when you're done." />

    <TextView
            android:id="@+id/TextView3"
            android:layout_width="386dp"
            android:layout_height="69dp"
            android:gravity="center"
            android:text="SCAN PHOTO"
            android:textColor="#BC26FF"
            android:textSize="50dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="55dp" />

    <Button
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:background="@drawable/home_seta"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="55dp" />

    <Button
            android:id="@+id/home"
            android:layout_width="53dp"
            android:layout_height="46dp"
            tools:layout_editor_absoluteX="851dp"
            tools:layout_editor_absoluteY="55dp"
            android:background="@drawable/home" />


</androidx.constraintlayout.widget.ConstraintLayout>