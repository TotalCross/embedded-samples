<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="960dp"
        android:layout_height="640dp">
    <ImageView
            android:id="@+id/scan"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_width="960dp"
            android:layout_height="640dp"
            android:background="@drawable/scan"
    />
    <TextView
            android:id="@+id/TextView"
            android:layout_width="553dp"
            android:layout_height="137dp"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="183dp"
            android:textStyle="bold"
            android:textSize="34dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Please lift the lid and place the document on the tray. Hit NEXT when you're done." />

    <TextView
            android:id="@+id/TextView3"
            android:layout_width="553dp"
            android:layout_height="73dp"
            android:gravity="center"
            android:text="SCAN DOCUMENT"
            android:textColor="#BC26FF"
            android:textSize="48dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="55dp" />

    <Button
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:background="@drawable/home_seta"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="55dp" />

    <Button
            android:id="@+id/home"
            android:layout_width="58dp"
            android:layout_height="52dp"
            tools:layout_editor_absoluteX="850dp"
            tools:layout_editor_absoluteY="52dp"
            android:background="@drawable/home" />

    <Button
            android:id="@+id/scanb"
            android:layout_width="391dp"
            android:layout_height="175dp"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="404dp"
            android:background="@drawable/BUTTON_SCAN" />


</androidx.constraintlayout.widget.ConstraintLayout>